{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/common": [
      "/workspace/libs/common/src"
    ],
    "@app/common/*": [
      "/workspace/libs/common/src/*"
    ]
  }
}
